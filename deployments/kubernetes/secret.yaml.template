apiVersion: v1
kind: Secret
metadata:
  name: chat-secrets
  namespace: default
  labels:
    app: chatbox
    component: secrets
type: Opaque
stringData:
  # JWT Secret (MUST be changed in production)
  JWT_SECRET: "PLACEHOLDER_JWT_SECRET"

  # Encryption Key for Message Content (MUST be changed in production)
  # Generate with: openssl rand -hex 16  (produces exactly 32 hex chars, 128-bit entropy)
  # CRITICAL: Must be exactly 32 characters (used as-is for AES-256 key)
  # WARNING: Do NOT use 'openssl rand -base64 32' â€” that produces 44 characters, not 32
  ENCRYPTION_KEY: "PLACEHOLDER_ENCRYPTION_KEY_32B"

  # Storage Credentials (AWS S3)
  S3_ACCESS_KEY_ID: "PLACEHOLDER_S3_ACCESS_KEY_ID"
  S3_SECRET_ACCESS_KEY: "PLACEHOLDER_S3_SECRET_ACCESS_KEY"

  # SMTP Credentials
  SMTP_USER: "PLACEHOLDER_SMTP_USER"
  SMTP_PASS: "PLACEHOLDER_SMTP_PASS"

  # SMS API Credentials (Twilio)
  SMS_ACCOUNT_SID: "PLACEHOLDER_TWILIO_ACCOUNT_SID"
  SMS_AUTH_TOKEN: "PLACEHOLDER_TWILIO_AUTH_TOKEN"
  SMS_API_KEY: "PLACEHOLDER_SMS_API_KEY"

  # LLM API Keys
  LLM_PROVIDER_1_API_KEY: "PLACEHOLDER_OPENAI_API_KEY"
  LLM_PROVIDER_2_API_KEY: "PLACEHOLDER_ANTHROPIC_API_KEY"
  LLM_PROVIDER_3_API_KEY: "PLACEHOLDER_DIFY_API_KEY"

  # SES Credentials (if using AWS SES for email)
  SES_ACCESS_KEY_ID: "PLACEHOLDER_SES_ACCESS_KEY_ID"
  SES_SECRET_ACCESS_KEY: "PLACEHOLDER_SES_SECRET_ACCESS_KEY"
  SES_REGION: "us-east-1"

  # MongoDB Credentials (if using authentication)
  MONGO_USERNAME: "PLACEHOLDER_MONGO_USERNAME"
  MONGO_PASSWORD: "PLACEHOLDER_MONGO_PASSWORD"

  # Additional API Keys
  ADMIN_API_KEY: "PLACEHOLDER_ADMIN_API_KEY"
