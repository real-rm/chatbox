apiVersion: v1
kind: Secret
metadata:
  name: chat-secrets
  namespace: default
  labels:
    app: chatbox
    component: secrets
type: Opaque
stringData:
  # JWT Secret (MUST be changed in production)
  JWT_SECRET: "your-jwt-secret-key-change-in-production-use-strong-random-string"
  
  # Encryption Key for Message Content (MUST be changed in production)
  # Generate with: openssl rand -base64 32
  # CRITICAL: Must be exactly 32 bytes for AES-256 encryption
  ENCRYPTION_KEY: "CHANGE-ME-32-BYTE-KEY-FOR-AES256"
  
  # Storage Credentials (AWS S3)
  S3_ACCESS_KEY_ID: "your-s3-access-key-id"
  S3_SECRET_ACCESS_KEY: "your-s3-secret-access-key"
  
  # SMTP Credentials
  SMTP_USER: "smtp-username"
  SMTP_PASS: "smtp-password"
  
  # SMS API Credentials (Twilio)
  SMS_ACCOUNT_SID: "REPLACE_WITH_TWILIO_ACCOUNT_SID"
  SMS_AUTH_TOKEN: "REPLACE_WITH_TWILIO_AUTH_TOKEN"
  SMS_API_KEY: "REPLACE_WITH_SMS_API_KEY"

  # LLM API Keys
  LLM_PROVIDER_1_API_KEY: "REPLACE_WITH_OPENAI_API_KEY"
  LLM_PROVIDER_2_API_KEY: "REPLACE_WITH_ANTHROPIC_API_KEY"
  LLM_PROVIDER_3_API_KEY: "REPLACE_WITH_DIFY_API_KEY"

  # SES Credentials (if using AWS SES for email)
  SES_ACCESS_KEY_ID: "REPLACE_WITH_SES_ACCESS_KEY_ID"
  SES_SECRET_ACCESS_KEY: "REPLACE_WITH_SES_SECRET_ACCESS_KEY"
  SES_REGION: "us-east-1"
  
  # MongoDB Credentials (if using authentication)
  MONGO_USERNAME: "chatbox-user"
  MONGO_PASSWORD: "your-mongo-password"
  
  # Additional API Keys
  ADMIN_API_KEY: "your-admin-api-key-for-monitoring"
